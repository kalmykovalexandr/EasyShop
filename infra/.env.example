# Database Configuration
# JDBC connection string for the PostgreSQL database
DB_URL=jdbc:postgresql://db:5432/easyshop
# Database username
DB_USER=postgres
# Database password
DB_PASSWORD=postgres
# Default schema used by Hibernate
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_SCHEMA=
# Comma-separated list of schemas managed by Flyway
SPRING_FLYWAY_SCHEMAS=
# Default schema for Flyway migrations
SPRING_FLYWAY_DEFAULT_SCHEMA=
# Whether Flyway should create schemas if they are missing
SPRING_FLYWAY_CREATE_SCHEMAS=
# Table used by Flyway to track migrations
SPRING_FLYWAY_TABLE=
# Schema name for auth service tables
AUTH_SCHEMA=
# Schema name for product service tables
PRODUCTS_SCHEMA=
# Schema name for purchase service tables
PURCHASES_SCHEMA=

# Service URLs
# Base URL for the auth service
AUTH_SERVICE_URL=
# Base URL for the product service
PRODUCT_SERVICE_URL=
# Base URL for the purchase service
PURCHASE_SERVICE_URL=
# Base URL for the API gateway
API_GATEWAY_URL=
# Base URL of the frontend application
FRONTEND_URL=
# Base path for API calls
API_BASE=
# Full base URL for frontend API requests
API_BASE_URL=
# Base URL of the external auth server
AUTH_SERVER_URL=
# Issuer identifier for the auth server
AUTH_SERVER_ISSUER=

# API Routes
# Route prefix for auth endpoints
AUTH_ROUTE=
# Route prefix for product endpoints
PRODUCTS_ROUTE=
# Route prefix for purchase endpoints
PURCHASES_ROUTE=

# OAuth2 / OIDC Clients
# Client ID for the web application
WEBAPP_CLIENT_ID=
# Client secret for the web application
WEBAPP_CLIENT_SECRET=
# Redirect URI for the web application
WEBAPP_REDIRECT_URI=
# Post logout redirect URI for the web application
WEBAPP_POST_LOGOUT_REDIRECT_URI=
# OAuth2 response type for the web application
WEBAPP_RESPONSE_TYPE=
# OAuth2 scopes requested by the web application
WEBAPP_SCOPE=
# Enable automatic silent token renewal in the web application
WEBAPP_AUTOMATIC_SILENT_RENEW=
# Whether to load user info after login in the web application
WEBAPP_LOAD_USER_INFO=
# Enable PKCE for the web application
WEBAPP_PKCE=
# Client ID for the API gateway
GATEWAY_CLIENT_ID=
# Client secret for the API gateway
GATEWAY_CLIENT_SECRET=
# OAuth2 scopes for the API gateway
GATEWAY_SCOPE=
# Client ID for the purchase service
PURCHASE_SERVICE_CLIENT_ID=
# Client secret for the purchase service
PURCHASE_SERVICE_CLIENT_SECRET=
# OAuth2 scopes for the purchase service
PURCHASE_SERVICE_SCOPE=

# Service Metadata
# Version number of the service
SERVICE_VERSION=
# Description of the service
SERVICE_DESCRIPTION=

# Frontend Application Settings
# Request timeout in milliseconds for API calls
API_TIMEOUT=
# Human readable frontend application name
APP_NAME=
# Version of the frontend application
APP_VERSION=
# Active Spring profile
SPRING_PROFILES_ACTIVE=local
# Enable frontend debug mode
DEBUG_MODE=

# Security and CORS
# Require SSL for incoming requests
REQUIRE_SSL=
# Allowed CORS origins (comma-separated)
CORS_ALLOWED_ORIGINS=
# Allowed CORS HTTP methods (comma-separated)
CORS_ALLOWED_METHODS=
# Allowed CORS headers (comma-separated)
CORS_ALLOWED_HEADERS=
# Whether to allow CORS credentials
CORS_ALLOW_CREDENTIALS=

# Config Server
# URI of the Spring Cloud Config Server
CONFIG_SERVER_URI=http://localhost:8888
# Username for the Config Server
CONFIG_SERVER_USER=config
# Password for the Config Server
CONFIG_SERVER_PASSWORD=config

# Docker Images
# Tag used for docker images
IMAGE_VERSION=latest
# Registry hosting docker images
DOCKER_REGISTRY=localhost

# Maven Repository (optional)
# Maven repository URL
MAVEN_REPO_URL=https://repo.maven.apache.org/maven2

